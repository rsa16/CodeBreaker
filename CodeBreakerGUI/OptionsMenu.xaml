                    </FlowDocument>
                </RichTextBox>
                <TextBlock x:Name="New_FileText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Save New File As Path:" Width="131.167" RenderTransformOrigin="0.53,1.439" Height="23.618" Canvas.Left="0.334" Canvas.Top="20.097"/>
