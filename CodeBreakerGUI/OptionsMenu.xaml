                    <FlowDocument>
                        <Paragraph>
                            <Run x:Name="Convert" Text=""/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

            </Canvas>

        </Grid>


    </StackPanel>
</Window>

